<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.AppTheme.Button"
        parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>


    <style name="Widget.AppTheme.TextButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.AppTheme.LikeCheckBox"
        parent="Widget.AppTheme.Button">
        <item name="icon">@drawable/like_icon_selector</item>
        <item name="iconTint">@color/like_tint_selector</item>
    </style>

    <style name="Widget.AppTheme.ShareButton"
        parent="Widget.AppTheme.Button">
        <item name="icon">@android:drawable/ic_menu_share</item>
    </style>

    <style name="Widget.AppTheme.PostMenu"
        parent="Widget.AppTheme.Button">
        <item name="icon">@drawable/ic_more_vert_24</item>
        <item name="iconSize">32dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>